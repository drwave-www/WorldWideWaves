<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Limit app to phones only (exclude tablets) -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="false"
        android:xlargeScreens="false"
        android:requiresSmallestWidthDp="320" />

    <!-- Exclude non-phone form factors -->
    <!-- Require touchscreen (excludes TV) -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="true" />

    <!-- Explicitly exclude Android TV -->
    <uses-feature android:name="android.software.leanback" android:required="false" />
    <uses-feature android:name="android.hardware.type.television" android:required="false" />

    <!-- Explicitly exclude Android Auto -->
    <uses-feature android:name="android.hardware.type.automotive" android:required="false" />

    <!-- Exclude Chromebooks (require telephony which most Chromebooks lack) -->
    <uses-feature android:name="android.hardware.telephony" android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- REQUIRED: Internet permission for Firebase services.
         Network Security Config (res/xml/network_security_config.xml) enforces HTTPS-only connections.

         Firebase services requiring network access:
         - Firebase Analytics: User analytics and app diagnostics
         - Firebase Crashlytics: Crash reporting for stability improvements
         - Firebase Remote Config: Runtime log level configuration
         - Firebase Storage: Event choreographies and metadata downloads

         Note: Offline map tiles are delivered via Play Store dynamic feature modules, NOT downloaded at runtime.
         This permission cannot be removed without breaking Firebase functionality. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required for Firebase Analytics to function properly -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <!-- Required for Android 13+ when using Glide NotificationTarget -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Required for WorkManager to persist scheduled notifications across device restarts -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="tiramisu"
        android:localeConfig="@xml/locales_config"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WorldWideWaves.Splash"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep link support for notifications -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="worldwidewaves" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.event.EventActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.event.EventFullMapActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.event.WaveActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="remove">
        </provider>

    </application>

</manifest>