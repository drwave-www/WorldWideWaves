<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer that fills the screen -->
    <item>
        <bitmap
            android:src="@drawable/splash_background"
            android:gravity="center"
            android:tileMode="disabled" />
    </item>
    
    <!-- Logo layer positioned at the bottom center -->
    <item android:gravity="bottom|center_horizontal">
        <bitmap
            android:src="@drawable/splash_icon"
            android:gravity="bottom|center_horizontal" />
        <!-- Adding bottom padding to match the current design -->
        <inset android:bottomMargin="24dp" />
    </item>
</layer-list>
